<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA"
    >


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/music_player_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            />


        <ImageView
            android:id="@+id/music_model"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/media_title"
        android:hint="@string/no_music_hint"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/media_artist"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/media_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:paddingTop="100dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/media_prev"
            android:src="@drawable/ic_skip_previous_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            />


        <ImageView
            android:id="@+id/media_play"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/media_next"
            android:src="@drawable/ic_skip_next_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/media_up_next_title"
        android:hint="media_up_next_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/media_up_next_artist"
        android:hint="media_up_next_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/select_music_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="切换音乐播放器" />

    </RelativeLayout>


</LinearLayout>